# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=your_assistant_id_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PostgreSQL Configuration (Optional - for SQL API)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_MAX_CONNECTIONS=10

SQL_QUERY_TIMEOUT=30000
SQL_MAX_ROWS=1000
SQL_RATE_LIMIT_WINDOW=900000
SQL_RATE_LIMIT_MAX=20

# Metabase Integration (Optional)
METABASE_BASE_URL=https://metabase2.progfin.com
METABASE_API_KEY=your_metabase_api_key_here
